#!/usr/bin/env bash

# 100% stolen from https://raw.githubusercontent.com/ThePrimeagen/.dotfiles/master/bin/.local/scripts/tmux-sessionizer

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/code -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected -n "Editor" \; \
        new-window -dt $selected_name:2 -n "AI" -c $selected \; \
        new-window -dt $selected_name:3 -n "CLI" -c $selected \; \
        select-window -t $selected_name:1 \; \
        setw -t $selected_name:2 monitor-activity off \; \
        setw -t $selected_name:3 monitor-activity off \; \
        setw -t $selected_name:2 monitor-activity on \; \
        setw -t $selected_name:3 monitor-activity on
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected -n "Editor" \; \
        new-window -dt $selected_name:2 -n "AI" -c $selected \; \
        new-window -dt $selected_name:3 -n "CLI" -c $selected \; \
        select-window -t $selected_name:1 \; \
        setw -t $selected_name:2 monitor-activity off \; \
        setw -t $selected_name:3 monitor-activity off \; \
        setw -t $selected_name:2 monitor-activity on \; \
        setw -t $selected_name:3 monitor-activity on
fi

tmux switch-client -t $selected_name
